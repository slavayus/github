<resources>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="startAppText">@color/startAppTextColor</item>
        <item name="toolBarTextColor">@color/startAppTextColor</item>
    </style>

    <style name="DarkTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="DarkTheme.ToolBar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleTextColor">?attr/toolBarTextColor</item>
    </style>

    <style name="StartAppTextView">
        <item name="android:textSize">60sp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">?attr/startAppText</item>
    </style>

    <style name="DarkTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColorPrimary">?attr/toolBarTextColor</item>
    </style>

    <style name="DarkTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
